<h2> Listing articles  ||  <%= link_to 'Add article', action: 'new' %> </h2>

<%= form_tag("articles/index", method: :get) do %>

    <%= text_field_tag :store, params[:store] %>

    <%= submit_tag 'search', name: nil %>
    
    <% end %>

<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'show', article_path(article) %></td> 
            <td><%= link_to 'edit', edit_article_path(article) %></td> 

            <td><%= link_to 'download_article', articles_download_pdf_path(article) %></td> 
            <td><%= link_to 'destroy', article_path(article), method: :delete, data: {confirm: 'are you sure?'} %></td>
            <td> </td>
        </tr>
        <%end%>
</table>

